<tr>
  <td>
    <% unless current_user.id == user.id %>
    <span><%= link_to "X", [:admin, user], method: :delete, class:"x-btn", data: { confirm: 'Are you sure?' } %></span>
    <% end %>
  </td>
  <td>
    <%= user.id %>
  </td>
  <td>
    <%= user.name %>
  </td>
  <td>
    <%= user.email %>
  </td>
  <td>
    <%= time_ago_in_words(user.created_at) %>
  </td>
  <td>
    <%- if user.current_sign_in_at %>
      <%= time_ago_in_words(user.current_sign_in_at) %>
    <% end %>
  </td>
  <%= simple_form_for([:admin, user]) do |f| %>
    <td>
      <%= f.check_box :admin %>
    </td>
    <td style="font-size:.5em">
      <% unless current_user.id == user.id %>
        <%= f.button :submit, class: "btn btn-primary btn-xs" %>
      <% end %>
    </td>
  <% end %>
</tr>

