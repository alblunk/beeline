<html>
    <head>
      <!-- RESPONSIVE -->
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <link href="assets/css/bootstrap-responsive.css" rel="stylesheet">
      <!-- FONTS http://html.adobe.com/edge/webfonts/-->
      <script src="http://use.edgefonts.net/istok-web.js"></script>
      <!-- CAROUSEL -->
      <script type="text/javascript">
        $(function(){
          $('.carousel').carousel();
        });
      </script>
    </head>
    <body>

    <!--  Carousel - consult the Twitter Bootstrap docs at
          http://twitter.github.com/bootstrap/javascript.html#carousel -->
      <div id="myCarousel" class="carousel slide" data-pause="remove"><!-- class of slide for animation -->
        <div class="carousel-inner">
          <div class="item active"><!-- class of active since it's the first item -->
            <img src="https://s3.amazonaws.com/beelineco/TS_Shoes.png"  alt="" />
          </div>
          <div class="item">
            <img src="https://s3.amazonaws.com/beelineco/outdoor_tentmock.png" alt="" />
           <!--  <div class="carousel-caption">
              <p>Poler Stuff</p>
            </div> -->
          </div>
          <div class="item">
            <img src="https://s3.amazonaws.com/beelineco/TopoDMock.png" alt="" />
            <!-- <div class="carousel-caption">
              <p>Topo Designs</p>
            </div> -->
          </div>
          <div class="item">
            <img src="https://s3.amazonaws.com/beelineco/jl_Lawson.png" alt="" />
            </div>
          </div>
        </div><!-- /.carousel-inner -->
        <!--  Next and Previous controls below
              href values must reference the id for this carousel -->
         <!--  <a class="carousel-control left" href="#myCarousel" data-slide="prev">‹</a>
          <a class="carousel-control right" href="#myCarousel" data-slide="next">›</a> -->
      </div><!-- /.carousel -->
       <div class="container-fluid">
      <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg, class: "alert alert-#{name}") %>
      <% end %>
   </body>

   
 </html> 	
