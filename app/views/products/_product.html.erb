<div class="<%= size %>" >
	
  <%= link_to image_tag(product.primary_image), product_path(product), class: 'thumbnail', data: { product_id: product.id } %>

  <h6 style="position:absolute;bottom:14px;left:19px;text-align:left;pointer-events:none;color:white;opacity:0;font-size:.8em !important;padding:10px;background-color:rgba(0,0,0,0.6);border-top-right-radius:10px" class="tits">
		<span style="font-size:1.3em !important"><%= product.name%></span><br><br>
		<%= product.percentage %>% Funded<br>
		<%= time_ago_in_words(product.end_date).html_safe unless product.end_date.blank? %> left
	</h6>
</div>
