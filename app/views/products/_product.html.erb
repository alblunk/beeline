<div class = "box">
		<p id="h-product" class="p-font"><%=product.productname%></p>
		<p id="h-brandname" class="subh-font"><%=product.brandname%></p>
		<div class="h-pic">
		<%= link_to image_tag(product.image(:large)), product %>
		</div>
	<% if current_user == product.user %>
		<p>
		<%= link_to 'Edit', edit_product_path(product) %>
		//
		<%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
		</p>
	<% end %>
</div>

