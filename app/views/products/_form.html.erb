<%= form_for([@product.brand, @product], html: { class: "form-horizontal" }) do |f| %>
<div class="col-md-10 white-background" style="padding-bottom:20%">
  <div class="row">
    <div class="col-md-6">
      <%#= f.error_notification %>

      <%= f.label :name, "Enter Product Name:" %>
      <%= f.text_field :name %>

      <%= f.label :price, "Price:" %>
      <%= f.text_field :price %>

      <%= f.label :deliver_date, "Estimated Delivery Date:" %>
      <%= f.text_field :deliver_date %>

      <%= f.label :description, "Enter Product Description:" %>
      <%= f.text_area :description, input_html: { rows: "10",  class: 'textbox wysihtml5' } %>

      <%= f.label :details, "Enter Product Details:" %>
      <%= f.text_area :details, input_html: { rows: "10",  class: 'textbox wysihtml5' } %>


      <%#= f.input :ecomm_url, label: "Celery Product Code?" %>
    </div>
    <div class="col-md-6">
      <%#= f.full_error :image_file_size, class: "alert alert-error" %>
      <%#= f.full_error :image_content_type, class: "alert alert-error" %>

      <% unless @product.new_record? %>
        <h5>Current Photos</h5>
        <% if @product.images.empty? %>
          <p>No photos uploaded yet!</p>
        <% else %>
          <% @product.images.each do |image| %>


            <!-- TODO: this needs to get fixed -->
            <%#= image_tag(image.image(:small), size: "75x75") if image.persisted? %>


          <% end %>
        <% end %>
      <% end %>


      <div class="row">
        <%= f.label "Upload some images!" %>
      </div>

      <%= f.fields_for :image, html: {multipart: true} do |image_field| %>
        <%= image_field.file_field :image %>
      <% end %>


      <div class="form-actions" style="padding:10px;">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
<% end %>

<!-- wysihtml5 -->
<script type="text/javascript">
  $(function() {
    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5();
    });
  })
</script>
