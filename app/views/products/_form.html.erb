<div class="container-fluid well">
  <div class="row-fluid">
    <%= simple_form_for([@product.brand, @product], html: { class: "form-horizontal" }) do |f| %>
      <div class="span12">
        <div class="row-fluid">
          <div class="span6">
            <%= f.error_notification %>

            <%= f.input :name, label: "Enter Product Name:" %>
            <%= f.input :price, label: "Price:" %>
            <%= f.input :deliverdate, label: "Estimated Delivery Date:" %>
            <%= f.input :description, as: :text, input_html: { rows: "10", class: 'textbox' }, 
                                      label: "Enter Product Description:"%>
            <%= f.input :details, as: :text, input_html: { rows: "10", class: 'textbox' },
                                      label: "Enter Product Details:"%>

            <%= f.input :ecomm_url, label: "Celery Product Code?" %>

          </div>
          <div class="span6">
            <%= f.full_error :image_file_size, class: "alert alert-error" %>
            <%= f.full_error :image_content_type, class: "alert alert-error" %>
            <div class="row">
              <%= f.label "Upload some images!" %>
            </div>
            <%= f.simple_fields_for :images, html: { multipart: true } do |i| %>
              <%= i.input :image, label: "Upload a photo!" %>
            <% end %>
            <div class="form-actions">
              <%= f.button :submit, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
