<div class="col-md-offset-1 col-md-8 white-background" style="padding-bottom:20%;">
  <ul class="list-inline">
  	<% @products.each do |product| %>
  		<% if product.has_images? %>
	      <li><%= link_to image_tag(product.images.first.image(:small), size: "75x75"), edit_brand_product_path(product.brand, product)%></li>
	    <% end %>
    <% end %>
  </ul>
</div>

