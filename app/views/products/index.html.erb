<div class="col-md-offset-1 col-md-8 white-background">
  <h1>Products List</h1>
  <hr style="border-color: rgba(0,0,0,.3);margin-top:2px">
  <div class="table-responsive">
    <table class="table table-striped table-condensed" style="font-size:.75em">
      <thead>
        <tr>
          <th>ID</th>
          <th>Owner</th>
          <th>Brand</th>
          
          <th>Name</th>
          <th>Pic</th>
          <th>$</th>
          <th>Delivery Date</th>
          <th>Status</th>
          <th>Created</th>
          <th>Updated</th>
          <th>Active?</th>
          <!-- <th>Update?</th> -->
          <th>Delete?</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.owner_id %></td>
            <td><%= product.brand_id %></td>
            <td><%= link_to product.name, product %></td>

            <% if product.images.any? %>
              <td><%= link_to image_tag(product.images.first.image, size: "25x25"), product %></td>
              <%else%>
              <td>-</td>
            <% end %>

            <td>$<%= product.price %></td>
            <td><%= product.deliver_date %></td>
            <td><%= product.status %></td>
            <td><%= time_ago_in_words(product.created_at) %></td>
            <td><%= time_ago_in_words(product.updated_at) %></td>
            <td><%= product.active %></td>

            <!-- <%#= form_for([:active, product]) do |f| %>
              <td>
                <%#= f.check_box :active %>
              </td>
              <td style="font-size:.5em">
                <%#= f.submit%>
              </td>
            <%# end %> -->

            <td>
              <span><%= link_to "X", product, method: :delete, class:"x-btn", data: { confirm: 'Are you sure?' } %></span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @products %>
</div>

