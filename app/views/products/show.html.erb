                <!-- TUMBLER -->
                  <a href="http://<%#@product.brand.tumblr.html_safe%>.tumblr.com/" target="blank"><img class="brandsocial" src="https://s3.amazonaws.com/beelineco/brand+social+links/tumblr_square_black.png"/></a>

