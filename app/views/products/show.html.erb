          <div class="row">
            <div class="col-md-12">
              <blockquote class="pull-right" style="margin-top:-10px;margin-bottom:0px">
                <p style="font-size:1.2em;font-style:italic;"><%=@product.description.html_safe%></p>
                <h6 style="font-size:.6em"><small><%= @product.brand.founders%> of <%=@product.brand.name.html_safe%></small></h6>
