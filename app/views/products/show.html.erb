<div class="row-fluid" class="show-products">
	<div class="span12">
		<!-- <%= image_tag @product.image %> -->
		<section id="carousel">
              <div id="myCarousel" class="carousel slide">
                <ol class="carousel-indicators">
                  <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                  <li data-target="#myCarousel" data-slide-to="1"></li>
                  <li data-target="#myCarousel" data-slide-to="2"></li>
                  <li data-target="#myCarousel" data-slide-to="3"></li>
                  <li data-target="#myCarousel" data-slide-to="4"></li>
                </ol>
                <div class="carousel-inner">
                  <div class="item active">
                    <img src="<%=@product.pic1.html_safe %>" alt="">
                    <div class="carousel-caption">
                     	<h3 id="product_title"><%= @product.productname %></h3>
						<h5 id="brand_name"><%= @product.brandname %></h5>
                    </div>
                  </div>
                  <div class="item">
                    <img src="<%=@product.pic2.html_safe %>" alt="">
                    <div class="carousel-caption">
                      	<h3 id="product_title"><%= @product.productname %></h3>
						<h5 id="brand_name"><%= @product.brandname %></h5>
                    </div>
                  </div>
                  <div class="item">
                    <img src="<%=@product.pic3.html_safe %>" alt="">
                    <div class="carousel-caption">
                      	<h3 id="product_title"><%= @product.productname %></h3>
						<h5 id="brand_name"><%= @product.brandname %></h5>
                    </div>
                  </div>
                   <div class="item">
                    <img src="<%=@product.pic4.html_safe %>" alt="">
                    <div class="carousel-caption">
                      	<h3 id="product_title"><%= @product.productname %></h3>
						<h5 id="brand_name"><%= @product.brandname %></h5>
                    </div>
                  </div>
                   <div class="item">
                    <img src="<%=@product.pic5.html_safe %>" alt="">
                    <div class="carousel-caption">
                      	<h3 id="product_title"><%= @product.productname %></h3>
						<h5 id="brand_name"><%= @product.brandname %></h5>
                    </div>
                  </div>
                </div>
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
              </div>
        </section>
    </div>
</div>


<div class="row-fluid">
  <div class="span12">
    <div class="row-fluid">
        <div class="span6">
          <div class="row-fluid">
            	<div class="span6">
            		<div class="centerize"><button class="big-green-button" data-celery=<%=@product.ecomm_url.html_safe%>>BACK IT</button></div>
  			       </div>
  			       <br>
              <div class="span6 campaign-details">
              		<h2 id="price"><small>$</small><%=@product.price %></h2>
              		<div id="campaign-details">
        					<h5 class="subh-font"> 20 of 100 Backers Needed</h5>
        					<h5 class="subh-font"> Ends: 5/15/2013</h5>
        				</div>
  			     </div>
          </div>
          <br>
          <div class="centerize">
          <h3 class="h-font" id="campaign-status-title">Campaign Status: <span id="campaign-status" class="label label-default"><%=@product.productstatus%></span></h3>
      <div class="celery-progress-bar" data-celery-slug=<%=@product.ecomm_url.html_safe%> data-celery-words=" funded" data-celery-color="#FFCC00" data-celery-goal-text="Funded!"></div></div>
          
        </div>
        <div class="span6 leftline">
        	<blockquote id="vendor-quote" class="pull-right">
        <p><%= @product.description %></p>
        <small><%=@product.founders%></small>
      </blockquote>
  		<hr>
  		<h3 class="h-font updates">Updates:</h3>
          <p class="p-font updates"> <%=@product.updates%></p></div>

    </div>
  </div>
</div>

<hr>
<div class="container-fluid">
	<div class="row-fluid">
		<div class="span6">
			<h3 id="profile-title" class="h-font">Meet the Maker:<space> <%= @product.brandname.html_safe %></h3>
			<h5 id="location" class="subh-font" ><%= @product.location%></h5> 
			<p class="p-font">
				<%=@product.profile%>
			</p>
			<a href="http://facebook.com/<%=@product.facebookbrand.html_safe%>" target="blank"><img class="brandsocial" src="https://s3.amazonaws.com/beelineco/brand+social+links/facebook_square_black.png"/></a>
			<a href="http://twitter.com/<%=@product.twitterbrand.html_safe%>" target="blank"><img class="brandsocial" src="https://s3.amazonaws.com/beelineco/brand+social+links/twitter_square_black.png"/></a>	
			<a href="http://instagram.com/<%=@product.instagrambrand.html_safe%>" target="blank"><img class="brandsocial" src="https://s3.amazonaws.com/beelineco/brand+social+links/instagram_square_black.png"/></a>
			<a href="http://<%=@product.tumblrbrand.html_safe%>.tumblr.com/" target="blank"><img class="brandsocial" src="https://s3.amazonaws.com/beelineco/brand+social+links/tumblr_square_black.png"/></a>
			<hr>
		</div>
		<div class="span6">
			<img id="brand-image" src="<%= @product.brandpic %>"/>
			
		</div>
	</div>
</div>

<% if current_user == @product.user %>
	<h4>
		<%= link_to 'Edit', edit_product_path(@product) %> //
		<%= link_to 'Back', products_path %>
	</h4>
	<p>
		Uploading user: <%= @product.user.name %>
	</p>
	<p>
		Created at: <%= @product.created_at %>
	</p>
		Updated at: <%= @product.updated_at %>
	</p>
	<p>
		Image file name: <%= @product.image_file_name %>
	</p>
	<p>
		Celery Button Code: <%= @product.ecomm_url %>
	</p>

<% end %>

