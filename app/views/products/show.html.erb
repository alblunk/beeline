          <div class="row">
            <h6 class="centerize" style="padding-top:10px;">More Brands</h6>
            <hr class="white-hr" style="opacity:.3;margin-top:-1px;width:40% !important;">
            <%= render :partial=>'brands/brand', :collection => @brands, :locals => {:size => 'col-md-3 col-xs-6'}  %>
