    <div class="col-md-5" id="details">

<!-- DETAILS START -->        
      <div class="row">
        <div class="col-md-12 well">
<!-- SOCIAL HEADER-->
          <div class="row">
            <div class="col-md-12">   
                  <h5 id="social-title" style="margin-top:-5px;" class="centerize" >SPREAD THE GOOD WORD</h5>
              </div>
            </div>

          <div class="row">
              <div class="col-md-12 centerize">
                <!-- FACEBOOK -->
              <a href="http://www.facebook.com/sharer/sharer.php?s=100&amp;p[url]=<%=request.original_url%>&amp;p[title]=<%= @product.name %>+by+<%#= @product.brand.name.html_safe %>+on+Farallon+Co.&amp;p[images][0]=https://s3.amazonaws.com/beelineco/FarallonCo-ShortForm.jpg&amp;p[summary]=Farallon+Co+-+Top+Tier+Brands,+Fan+Backed+Product,+Join+the+Company." target="blank"><%= image_tag("facebook.png", class: "social-show", width: "20") %>
              </a>
                
              <!--   <a href="http://www.facebook.com/sharer/sharer.php?u=<%#=request.original_url%>&[title]=<%#= @brand.name %> on Farallon Co." target="blank"><%#= image_tag("facebook.png", class: "social-show", width: "20") %></a> -->

            <!-- TWITTER -->
              <a href="http://twitter.com/home?status=Check+out+<%= @product.name %>+by+<%= @product.brand.name %>+on+@farallonco+(<%=request.original_url.html_safe%>)" target="blank" ><%= image_tag("twitter.png", class: "social-show", width: "20") %>
              </a>

            <!-- GOOGLE PLUS -->
              <a href="https://plus.google.com/share?url=<%=request.original_url.html_safe%>" target="blank"><%= image_tag("googleplus.png", class: "social-show", width: "20") %></a>
           
            <!-- PINTEREST -->
              <a href="http://pinterest.com/pin/create/bookmarklet/?media=<%#@product.pic1%>&url=<%=request.original_url%>&is_video=false&description=<%= @product.name %> by <%#=@brand.name%> on Farallon Co." target="blank" ><%= image_tag("pinterest.png", class: "social-show", width: "20") %></a>
           
            <!-- STUMBLEUPON -->
              <a href="http://www.stumbleupon.com/submit?url=<%=request.original_url%>&title=<%= @product.brand.name %> by <%#=@brand.name%> on Farallon Co.+<%=request.original_url%>" target="blank"><%= image_tag("stumbleupon.png", class: "social-show", width: "20") %>
                </a>
            </div>
          </div>
          <hr class="black-hr" style="padding-bottom:20px;">
<!-- PRICING & CAMPAIGN DETAILS -->
          <div class="row">
              <div class="col-md-6">
                
                <a href="#" data-celery="backpack"><div id="backbtn" class="flatbtn centerize">BACK IT</div></a>


                <hr class="black-hr" style="margin-bottom:5px">

                <a href="#FAQModal" data-toggle="modal"><h3 id="FAQLink" class="centerize">HOW DOES THIS WORK?</h3></a>

                <hr class="black-hr" style="margin-top:5px">

            </div>
            <div class="col-md-6 centerize">
              <h5>$<span id="price"><%= @product.price %></span></h5>
              <div id="delivery">
                <h5 style="font-size:.9em">Estimated Delivery:</h5> 
                  <hr class="black-hr" style="margin-top:-8px; margin-bottom:5px"> 
                <p style="font-size:.9em"><%= @product.deliver_date.html_safe %></p>
              </div>
            </div>
          </div>

<!-- CELERY DETAILS -->
          <div class="row">
            <div class="col-md-12">
              <div data-celery="backpack" data-celery-type="bar" style="background-color:transparent; margin-top:0;"></div>
            </div>
          </div>
        </div>
      </div>

<!-- DESCRIPTION -->
