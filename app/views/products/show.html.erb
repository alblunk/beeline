<!-- PRODUCT PICTURE PANE -->
    <div class="col-md-5" >
      <div class="mid-pic-frame" id="product-images">
        <div id="p-thumbnails-box">
          <%= image_tag("product_thumb1.jpg", class: "p-thumbnails") %>
            
            <%= image_tag("product2.jpg", class: "p-thumbnails", id:"p-selected") %>
            
            <%= image_tag("product_thumb1.jpg", class: "p-thumbnails") %>

            <%= image_tag("product2.jpg", class: "p-thumbnails") %>
        </div>
        
        <img  class="img-responsive" src="<%= image_path('background-road.jpg') %>"/>

        
      </div>
          

